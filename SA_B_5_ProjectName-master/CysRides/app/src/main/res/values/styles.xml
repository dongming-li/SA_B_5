<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="colorPrimary">@color/colorCardinal</item>
        <item name="colorPrimaryDark">@color/colorCardinalDark</item>
        <item name="colorAccent">@color/colorGold</item>
    </style>

    <style name="CustomActionBar">
        <item name="android:background">@color/colorCardinal</item>
        <item name="android:titleTextStyle">@color/colorGold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
